<!DOCTYPE html>
<html lang="en">
<head>
  <title>平昌养车</title>
  <%= csrf_meta_tags %>

  <%= Gon::Base.render_data  %>
  <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div id="wrapper">


  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">登录管理后台</h3>
          </div>
          <div class="panel-body">
            <%= form_for(:admin_user, url: admin_user_session_path) do |f| %>
              <fieldset>

                <p class="tips"><%= flash[:alert] || flash[:error] %></p>

                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: "E-mail" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: "Password"%>
                </div>
                <!--<div class="checkbox">-->
                <!--<label>-->
                <!--<input name="remember" type="checkbox" value="Remember Me">Remember Me-->
                <!--</label>-->
                <!--</div>-->
                <!-- Change this to a button or input when using this as a form -->
                <%= f.submit "登录", class: "btn btn-lg btn-success btn-block" %>
              </fieldset>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
  <%#= render 'admin/shared/footer' %>
  <%= debug(params) if Rails.env.development? %>
</div>


</body>
</html>
