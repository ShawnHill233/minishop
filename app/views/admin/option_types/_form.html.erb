<%= form_for [:admin, @option_type] do |f| %>
  <div class="form-group">
    <label>型号名称</label>
    <%= f.text_field :name, class: 'form-control' %>
    <label>型号描述</label>
    <%= f.text_field :presentation, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.fields_for :option_values do |option_value_form| %>
      <%= render 'option_value_fields', :f => option_value_form %>
    <% end %>
    <%= link_to_add_association '添加选项值', f, :option_values %>
  </div>
  
  <button type="submit" class="btn btn-default">确定保存</button>
  <button type="reset" class="btn btn-default">取消</button>
<% end %>