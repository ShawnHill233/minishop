<%= form_for [:admin, @banner] do |f| %>
  <div class="form-group">
    <label>商品ID</label>
    <%= f.text_field :product_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.fields_for :image_attributes do |builder| %>
      <label>轮播图片</label>
      <input type="file" id="upload" />
      <%= builder.hidden_field :url, id: 'image_url' %>
    <% end %>
  </div>
  <div class="form-group">
    <label>排序</label>
    <%= f.text_field :position, class: 'form-control' %>
  </div>
  <button type="submit" class="btn btn-default">确定保存</button>
  <button type="reset" class="btn btn-default">取消</button>
<% end %>