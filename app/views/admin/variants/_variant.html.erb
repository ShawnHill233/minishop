<div class="panel panel-default">
  <div class="panel-body">

    <table width="100%" class="table table-striped table-bordered table-hover" id="variants">
      <thead>
      <tr>
        <th>型号</th>
        <th>价格</th>
        <th>操作</th>
      </tr>
      </thead>
      <tbody>
      <% @variants.each do |variant| %>
        <tr>
          <td><%= variant.option_values.map { |option_value| "#{option_value.option_type.name}: #{option_value.name}" }.join(",") %></td>
          <td><%= variant.price %></td>
          <td>
            <%= link_to '编辑', edit_admin_product_variant_path(@product, variant) %> |
            <%= link_to '删除', admin_product_variants_path(variant), method: :delete %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>